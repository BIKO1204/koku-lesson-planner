{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noEmit": false
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist", ".next"]
}
